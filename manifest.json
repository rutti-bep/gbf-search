{
  "manifest_version": 2,
  "name": "gbf-search",
  "version":"0.2.0",
  "description":"お空の戦いを探す",
  "icons":{
    "128":"dest/images/gbf-search-icon-128.png"
  },
  "browser_action": {
    "default_popup": "dest/html/popup.html"
  },
  "background":{
    "scripts":[
      "dest/js/bundle-twitter.js",
      "dest/js/background.js"
    ]
  },
  "options_page": "dest/html/options.html",
  "permissions": [
    "https://stream.twitter.com/1.1/statuses/filter.json",
    "clipboardWrite",
    "storage"
  ],
  "web_accessible_resources": [
  ],
  "content_security_policy":"script-src 'self' https://stream.twitter.com/1.1/statuses/filter.json; object-src 'self'"
}

